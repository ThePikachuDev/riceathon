include ~/.cache/wal/colors-kitty.conf

hide_window_decorations yes

map ctrl+space launch --cwd=current --type=overlay zsh -c "~/tmux-sessionizer.sh"
map ctrl+j launch --cwd=current --type=overlay zsh -c "~/nvim-fzf.sh"

shell zsh

font_size        12
window_padding_width 3
window_margin_width  3
repaint_delay         10
input_delay           1
sync_to_monitor       yes
scrollback_lines      10000

include current-theme.conf
font_family      family="JetBrains Mono"
bold_font        auto
italic_font      auto
bold_italic_font auto
